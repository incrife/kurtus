<!-- Reemplaza el botón flotante actual por ESTE -->
<a href="./index.html" 
   id="back-to-home-btn"
   class="fixed bottom-6 left-1/2 transform -translate-x-1/2 z-40 flex items-center gap-3 bg-gradient-to-r from-yellow-500 to-yellow-600 text-black font-bold px-6 py-3 rounded-xl shadow-lg transition-all duration-500"
   onclick="window.location.href='./index.html'; return false;">
    <i class="fas fa-home"></i>
    <span>¿BUSCAS NUESTROS SERVICIOS?</span>
    <i class="fas fa-arrow-right ml-2"></i>
</a>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const backBtn = document.getElementById('back-to-home-btn');
    if(!backBtn) return;
    
    // Forzar clic manualmente si hay problemas
    backBtn.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = './index.html';
    });
    
    // Resto del código de animación (mostrar/ocultar)
    let isVisible = false;
    let cycleInterval;

    function showButton() {
        backBtn.classList.remove('opacity-0', '-translate-y-5');
        backBtn.classList.add('opacity-100', 'translate-y-0');
        isVisible = true;
    }

    function hideButton() {
        backBtn.classList.remove('opacity-100', 'translate-y-0');
        backBtn.classList.add('opacity-0', '-translate-y-5');
        isVisible = false;
    }

    // Mostrar inmediatamente
    setTimeout(() => {
        showButton();
    }, 1000);

    // Ciclo
    function startCycle() {
        cycleInterval = setInterval(() => {
            if (isVisible) {
                setTimeout(() => {
                    hideButton();
                }, 5000);
            } else {
                setTimeout(() => {
                    showButton();
                }, 10000);
            }
        }, 15000);
    }

    startCycle();

    backBtn.addEventListener('mouseenter', () => {
        clearInterval(cycleInterval);
        showButton();
    });

    backBtn.addEventListener('mouseleave', () => {
        setTimeout(() => {
            startCycle();
        }, 2000);
    });
});
</script>