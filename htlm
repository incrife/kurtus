<script>
// Aparece el mensaje después de 3 segundos
setTimeout(function() {
    const message = document.getElementById('whatsapp-message');
    message.classList.remove('opacity-0', 'translate-x-10');
    message.classList.add('opacity-100', 'translate-x-0');
}, 3000);

// Desaparece después de 10 segundos
setTimeout(function() {
    const message = document.getElementById('whatsapp-message');
    message.classList.remove('opacity-100', 'translate-x-0');
    message.classList.add('opacity-0', 'translate-x-10');
}, 13000);

// Aparece cada 60 segundos (1 minuto)
setInterval(function() {
    const message = document.getElementById('whatsapp-message');
    
    // Solo aparece si no está visible ya
    if (message.classList.contains('opacity-0')) {
        message.classList.remove('opacity-0', 'translate-x-10');
        message.classList.add('opacity-100', 'translate-x-0');
        
        // Desaparece después de 7 segundos
        setTimeout(function() {
            message.classList.remove('opacity-100', 'translate-x-0');
            message.classList.add('opacity-0', 'translate-x-10');
        }, 7000);
    }
}, 60000); // 60000 ms = 1 minuto
</script>
</div>
