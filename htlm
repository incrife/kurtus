<script>
// Elementos principales
const toggleBtn = document.getElementById('assistant-toggle-btn');
const toggleIcon = document.getElementById('toggle-icon');
const faqPanel = document.getElementById('faq-panel');
const categoryBtns = document.querySelectorAll('.faq-category-btn');

// Estado
let panelOpen = false;

// Abrir/cerrar panel
toggleBtn.addEventListener('click', () => {
    if (!panelOpen) {
        // Abrir panel
        faqPanel.style.opacity = '1';
        faqPanel.style.transform = 'scale(1) translateY(0)';
        faqPanel.style.pointerEvents = 'auto';
        toggleIcon.style.transform = 'rotate(180deg)';
        panelOpen = true;
    } else {
        // Cerrar panel
        faqPanel.style.opacity = '0';
        faqPanel.style.transform = 'scale(0.95) translateY(-5px)';
        faqPanel.style.pointerEvents = 'none';
        toggleIcon.style.transform = 'rotate(0deg)';
        
        // Cerrar todas las categorías abiertas
        document.querySelectorAll('.faq-content').forEach(content => {
            content.classList.add('hidden');
            const icon = content.previousElementSibling.querySelector('.fa-chevron-right');
            if (icon) {
                icon.style.transform = 'rotate(0deg)';
            }
        });
        
        panelOpen = false;
    }
});

// Acordeón para categorías
categoryBtns.forEach(btn => {
    btn.addEventListener('click', (e) => {
        e.stopPropagation(); // Evitar que se cierre el panel
        
        const content = btn.nextElementSibling;
        const icon = btn.querySelector('.fa-chevron-right');
        
        if (content.classList.contains('hidden')) {
            // Cerrar otras categorías
            document.querySelectorAll('.faq-content').forEach(otherContent => {
                if (otherContent !== content) {
                    otherContent.classList.add('hidden');
                    const otherIcon = otherContent.previousElementSibling.querySelector('.fa-chevron-right');
                    if (otherIcon) {
                        otherIcon.style.transform = 'rotate(0deg)';
                    }
                }
            });
            
            // Abrir esta categoría
            content.classList.remove('hidden');
            icon.style.transform = 'rotate(90deg)';
            
            // Scroll a la categoría si no está completamente visible
            content.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        } else {
            // Cerrar esta categoría
            content.classList.add('hidden');
            icon.style.transform = 'rotate(0deg)';
        }
    });
});

// Cerrar panel al hacer clic fuera
document.addEventListener('click', (e) => {
    if (panelOpen && 
        !faqPanel.contains(e.target) && 
        !toggleBtn.contains(e.target)) {
        
        faqPanel.style.opacity = '0';
        faqPanel.style.transform = 'scale(0.95) translateY(-5px)';
        faqPanel.style.pointerEvents = 'none';
        toggleIcon.style.transform = 'rotate(0deg)';
        
        // Cerrar categorías
        document.querySelectorAll('.faq-content').forEach(content => {
            content.classList.add('hidden');
            const icon = content.previousElementSibling.querySelector('.fa-chevron-right');
            if (icon) {
                icon.style.transform = 'rotate(0deg)';
            }
        });
        
        panelOpen = false;
    }
});

// Efecto hover en el botón principal
toggleBtn.addEventListener('mouseenter', () => {
    if (!panelOpen) {
        toggleBtn.style.transform = 'translateY(-2px)';
    }
});

toggleBtn.addEventListener('mouseleave', () => {
    if (!panelOpen) {
        toggleBtn.style.transform = 'translateY(0)';
    }
});
</script>

<style>
/* Animaciones y estilos */
@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

.animate-pulse {
    animation: pulse 2s infinite;
}

/* Transiciones suaves */
#faq-assistant * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Scrollbar personalizado */
#faq-panel .max-h-80::-webkit-scrollbar {
    width: 4px;
}

#faq-panel .max-h-80::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}

#faq-panel .max-h-80::-webkit-scrollbar-thumb {
    background: rgba(234, 179, 8, 0.3);
    border-radius: 2px;
}

#faq-panel .max-h-80::-webkit-scrollbar-thumb:hover {
    background: rgba(234, 179, 8, 0.5);
}

/* Efectos de profundidad */
.shadow-2xl {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
}

.hover\:shadow-lg:hover {
    box-shadow: 0 10px 25px rgba(234, 179, 8, 0.1);
}

/* Acordeón suave */
.faq-content {
    transition: max-height 0.3s ease, opacity 0.3s ease;
}

/* Ajustes responsive */
@media (max-width: 768px) {
    #faq-assistant {
        display: none;
    }
}
</style>
